---
import Button from './Button.astro';
---

<div class={`bg-cover bg-[url('/Gradient-Pattern-Hatch.svg')]`}>
  <div
    class="max-w-6xl mx-auto lg:flex items-center gap-20 py-40 lg:py-60 px-4 sm:px-10 md:px-20"
  >
    <div class="lg:w-1/3 mb-10 lg:mb-0">
      <img
        class="mx-auto md:w-[400px] md:max-w-xs max-w-[200px]"
        src="/Astro-Logo.svg"
        alt="Astro logo"
      />
    </div>
    <div class="text-white flex-1">
      <div class="mb-6 md:mb-8">
        <h1
          class="text-4xl md:text-6xl font-bold mb-4 md:mb-8 tracking-wide md:leading-tight"
        >
          Build Modern Websites with Astro!
        </h1>
        <p class="text-xl md:text-2xl tracking-wider">
          A hands-on course to teach you how to build websites the modern way
          using Astro!
        </p>
      </div>
      <div class="text-center lg:text-left">
        <Button
          isLink={true}
          href="#newsletter"
          text="Start Learning Now"
          className="hover:scale-105 transition-transform inline-block duration-200"
        />
      </div>
    </div>
  </div>
</div>
