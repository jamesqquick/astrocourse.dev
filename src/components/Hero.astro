---
import Button from './Button.astro';
import GradientWrapper from './GradientWrapper.astro';
import Newsletter from './Newsletter.svelte';
---

<div
  class={`py-40 lg:py-40 px-4 sm:px-10 md:px-20  bg-cover bg-[url('/Gradient-Pattern-Hatch.svg')]`}
>
  <div class="max-w-8xl mx-auto lg:flex items-center gap-20 mb-10">
    <div class="lg:w-1/3 mb-10 lg:mb-0">
      <img
        class="mx-auto md:w-[400px] md:max-w-xs max-w-[200px]"
        src="/Astro-Logo.svg"
        alt=""
      />
    </div>
    <div class="text-white flex-1">
      <div class="mb-6 md:mb-8">
        <h1
          class="text-4xl md:text-6xl xl:text-8xl font-bold mb-4 md:mb-4 tracking-wide md:leading-tight"
        >
          Build Modern Websites with Astro!
        </h1>
        <p class="text-xl md:text-2xl tracking-wider">
          A hands-on course to teach you how to build websites the modern way
          using Astro!!
        </p>
      </div>
      <!-- <div class="text-center lg:text-left">
        <Button
          isLink={true}
          href="#newsletter"
          text="Get Course Updates"
          className="hover:scale-105 transition-transform inline-block duration-200"
        />
      </div> -->
    </div>
  </div>
  <div
    class="bg-gradient-to-r to-blue-800 from-purple-800 max-w-4xl mx-auto rounded-lg p-1 shadow-lg"
  >
    <div class="bg-gray-900 p-4 md:p-10 rounded-lg">
      <Newsletter
        heading={`Don't Miss Out`}
        buttonText={'Join the Waitlist!'}
        client:load
      />
    </div>
  </div>
</div>
