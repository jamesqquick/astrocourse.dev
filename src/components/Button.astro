---
export interface Props {
  isLink?: boolean;
  href?: string;
  text: string;
  onClick?: () => void;
  className?: string;
}
const { isLink, href, text, onClick, className = '' } = Astro.props;
---

{
  isLink && (
    <a
      href={href}
      class={` text-indigo-800 px-6 py-3 rounded-lg bg-white text-sm sm:text-xl hover:scale-105 transition-transform  ${className} `}
    >
      {text}
    </a>
  )
}{
  !isLink && (
    <button
      class={`border-2 text-white bg-purple-500 px-6 py-3 rounded-full bg-transparent text-sm sm:text-xl  font-bold ${className} `}
      onclick={onClick}
    >
      {text}
    </button>
  )
}
